{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "DOM.AsyncIterable",
      "ESNext",
      "WebWorker"
    ],
    "paths": {
      "webapp/*": ["./webapp/*"]
    }
  },
  "include": [
    "eslint.config.js",
    "scripts/**/*.js",
    "webapp/**/*.js"
  ],
  "exclude": [
    "vendor/**/*"
  ]
}