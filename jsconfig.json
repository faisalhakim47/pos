{
  "include": [
    "env.d.ts",
    "src/**/*.js",
    "src/**/*.vue",
    "tests/**/*.js",
    "vite.config.js"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/vendor/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ]
  }
}